<% event ||= nil %>
<% link_to_path ||= nil %>
<% index ||= nil %>
<% edit_mode ||= nil %>

<% relative_time ||= nil %>
<% show_owner ||= nil %>
<% show_date ||= nil %>

<% card_params = {
  # data
  event: event,
  link_to_path: link_to_path,
  index: index,
  edit_mode: edit_mode,
  # options
  relative_time: relative_time,
  show_owner: show_owner,
  show_date: show_date
} %>

<% if link_to_path %>
  <%= link_to link_to_path do %>
    <%= render 'shared/event_card_content', card_params %>
  <% end %>
<% else %>
  <%= render 'shared/event_card_content', card_params %>
<% end %>
