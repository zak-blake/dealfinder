<% event ||= nil %>
<% edit_mode ||= false %>
<% show_owner ||= nil %>
<% location ||= false %>
<% hide_desc ||= false %>
<% show_rel_time ||= false %>
<% index ||= nil %>
<% link_to_path ||= nil %>
<% date ||= nil %>
<% combined_time_line ||= nil %>

<% card_params = {
  event: event,
  edit_mode: edit_mode,
  show_owner: show_owner,
  location: location,
  hide_desc: hide_desc,
  show_rel_time: show_rel_time,
  index: index,
  link_to_path: link_to_path,
  date: date,
  combined_time_line: combined_time_line
} %>

<% if link_to_path %>
  <%= link_to link_to_path do %>
    <%= render 'shared/event_card', card_params %>
  <% end %>
<% else %>
  <%= render 'shared/event_card', card_params %>
<% end %>
