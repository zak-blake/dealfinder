<%= form_for @event do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br />

  <%= f.label :description %>
  <%= f.text_area :description %><br />

  <%= f.label :start_time %>
  <%= f.time_select :start_time %><br />

  <%= f.label :end_time %>
  <%= f.time_select :end_time %><br />

  <%= f.submit 'Create New Event', :class => 'btn btn-primary' %>
<% end %>
