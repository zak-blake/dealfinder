<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :description %>
<%= f.text_area :description %>

<br /><br />

<%= f.collection_radio_buttons(:event_type, Event.type_name_array, :first, :second) do |b| %>
  <%= b.label(class: "event-form-text event-form-lb radio-inline") {b.radio_button(onchange: "hideGroupShow(\"event_type\", \"#{b.text}\")") + b.text } %>
<% end %>

<br /><br />

<div class="event-opt">
  <div class="event_type one-time" <%="#{'style=display:none;' if @event.weekly?}" %>>
    <label class="event-form-text event-form-lb"><%= f.date_select :event_date %></label>
  </div>

  <div class="event_type weekly" <%= 'style=display:none;' if @event.one_time? %>>
    <%= days_of_the_week_checkboxes(@event) %>
  </div>
</div>

<br /><br />

<div>
  <%= f.label :start_time, class: "event-form-text event-form-lb" do %>
    <div class="col-xs-3">
      start
    </div>
    <div class="col-xs-9">
      <%= f.time_select :start_time %>
    </div>
  <% end %>
</div>

<br />

<div>
  <%= f.label :end_time, class: "event-form-text event-form-lb" do %>
    <div class="col-xs-3">
      end
    </div>
    <div class="col-xs-9">
      <%= f.time_select :end_time %>
    </div>
  <% end %>
</div>


<br /><br />
