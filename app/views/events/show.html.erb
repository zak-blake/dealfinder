<div class="card">
  <h4><%= @event.name %><small> at <%= link_to @owner.name, user_show_path(@owner) %></small></h4>

  <h4 style="float: right"><small><%= @event.start_time.to_s(:time) + " to " + @event.end_time.to_s(:time) %></small></h4>

  <p><%= @event.description %></p>

  <%= button_to "delete", @event, :method => :delete if @edit_mode %>
</div>
